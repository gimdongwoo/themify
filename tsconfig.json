{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["dom", "es2015", "es2016", "es2017", "es2018", "esnext"],
    "declaration": true,
    "outDir": "./dist",
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "strict": true,
    "noUnusedLocals": true,
    "noEmitOnError": true,
    "noUnusedParameters": false,
    "typeRoots": ["./node_modules/@types"]
  },
  "exclude": [
    "__tests__",
    "dist",
    "node_modules"
  ]
}